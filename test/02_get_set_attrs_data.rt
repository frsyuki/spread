#!/usr/bin/env ruby
$LOAD_PATH << File.dirname(__FILE__)
require 'common'

LOOP   = (ARGV[0] || ENV["LOOP"] || (ENV["HEAVY"] ? 20 : 3)).to_i
SIZE   = (ARGV[1] || 10).to_i
NUM    = (ARGV[2] || 50).to_i

mds = start_mds
cs = start_cs
ds0 = start_ds(0, 0)
ds1 = start_ds(1, 0)
ds2 = start_ds(2, 1)
ds3 = start_ds(3, 1)

cs.show_nodes
cs.show_version

gw = start_gw

pid = Process.pid
keyf = "#{pid}-key%d"
data = "@"*SIZE

test "run normally" do
	c = gw.client

	LOOP.times {|o|
		NUM.times do |i|
			key = keyf % i
			attrs = {"loop"=>o.to_s, "attr#{i}"=>i.to_s}

			test 'set_data' do
				c.call(:set_data, key+"_data", data)
			end

			test 'set_attrs' do
				c.call(:set_attrs, key+"_attrs", attrs)
			end
		end

		NUM.times do |i|
			key = keyf % i
			attrs = {"loop"=>o.to_s, "attr#{i}"=>i.to_s}

			test 'get_data' do
				data_ = c.call(:get_data, key+"_data")
				data_attrs = c.call(:get_data, key+"_attrs")

				test_equals data, data_, 'get_data data_ == data'
				test_equals "", data_attrs, 'get_data data_attrs == '''
			end

			test 'get_attrs' do
				attrs_ = c.call(:get_attrs, key+"_attrs")
				attrs_data = c.call(:get_attrs, key+"_data")

				test_equals attrs, attrs_, 'get_attrs attrs_ == attrs_'
				test_equals Hash.new, attrs_data, 'get_attrs attrs_data == {}'
			end
		end
	}
end

cs.show_items
cs.show_stat

term_all(ds0, ds1, ds2, ds3, gw, mds, cs)

